<div class="card-header">
    <h3 class="card-title"><%- name %></h3>
    <% if (isDeleteEnabled()) { %>
    <div class="card-options">
        <a class="btn btn-secondary btn-sm ml-2 delete-link">Delete</a>
    </div>
    <% } %>
</div>

<% if (isDeleteEnabled()) { %>
<div class="card-alert alert alert-danger mb-0 delete-confirm">
    Are you sure you want to delete this tag? This cannot be undone! <a class="btn btn-secondary btn-sm ml-2 delete-real">Yes I'm Sure</a>
</div>
<div class="card-alert alert alert-warning mb-0 delete-unsupported">
    Deletion is disabled on this registry. <a href="#instructions/deletion" class="deletion-link">Learn about enabling it here</a>.
</div>
<% } %>

<div class="card-alert alert alert-secondary mb-0 pull-command">
    docker pull <%- getRegistryDomain() %>/<%- image_name %>:<%- name %>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="h6">Image ID</div>
            <p><%- getShortDigestId(config.digest) %></p>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="h6">Author</div>
            <p><%- info.author %></p>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="h6">Docker Version</div>
            <p><%- info.docker_version %></p>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="h6">Size</div>
            <p><%- getSize() %></p>
        </div>
    </div>
</div>
